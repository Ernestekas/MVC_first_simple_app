@model SponsorModel

@using (Html.BeginForm("SubmitAddNewSponsor", "Sponsor", FormMethod.Post))
{
    @Html.LabelFor(s => s.FirstName)
    @Html.TextBoxFor(s => s.FirstName) 
    <br />
    @Html.LabelFor(s => s.Surname)
    @Html.TextBoxFor(s => s.Surname)
    <br />
    @Html.LabelFor(s => s.Amount)
    @Html.TextBoxFor(s => s.Amount, new {@type = "number"})
    <br />
    @Html.LabelFor(s => s.AnimalId)
    @Html.TextBoxFor(s => s.AnimalId, new {@type = "number"})
    <br />
    <input type = "submit" value = "submit" />
}